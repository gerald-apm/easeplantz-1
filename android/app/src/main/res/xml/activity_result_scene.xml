<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/iv_detect"
                motion:framePosition="0"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@id/iv_detect"
                motion:framePosition="30"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@id/iv_detect"
                motion:framePosition="100"
                android:alpha="0" />

            <KeyAttribute
                motion:motionTarget="@id/tv_info"
                motion:framePosition="0"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@id/tv_info"
                motion:framePosition="50"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@id/tv_info"
                motion:framePosition="100"
                android:alpha="0" />

            <KeyAttribute
                motion:motionTarget="@id/home"
                motion:framePosition="0"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@id/home"
                motion:framePosition="100"
                android:alpha="0" />

            <KeyAttribute
                motion:motionTarget="@id/home_no_bg"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@id/home_no_bg"
                motion:framePosition="100"
                android:alpha="1" />

            <KeyAttribute
                motion:motionTarget="@+id/tv_name"
                motion:framePosition="0"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/tv_name"
                motion:framePosition="4"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tv_name"
                motion:framePosition="100"
                android:alpha="0" />

            <KeyAttribute
                motion:motionTarget="@+id/tv_title"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tv_title"
                motion:framePosition="4"
                android:alpha="1" />
            <KeyAttribute
                motion:motionTarget="@+id/tv_title"
                motion:framePosition="100"
                android:alpha="1" />
        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/scroll_view" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/scroll_view" />
        <Constraint
            android:id="@id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/iv_detect"
            android:elevation="0dp"
            motion:layout_constraintWidth_percent="0.4"
            motion:layout_constraintEnd_toEndOf="@id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            motion:layout_constraintTop_toBottomOf="@id/home"
            motion:layout_constraintDimensionRatio="0.7"
            motion:layout_constraintStart_toStartOf="@id/view" />
        <Constraint
            android:id="@+id/tv_name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            motion:layout_constraintTop_toBottomOf="@id/iv_detect" />
        <Constraint
            android:id="@+id/scroll_view"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/tv_info"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />
        <Constraint
            android:id="@+id/tv_info"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            motion:layout_constraintTop_toBottomOf="@id/tv_name" />
        <Constraint
            android:id="@+id/home_no_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            motion:layout_constraintTop_toBottomOf="@id/iv_detect"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="start"
            motion:layout_constraintStart_toEndOf="@id/home"
            motion:layout_constraintTop_toTopOf="@id/home"
            motion:layout_constraintBottom_toBottomOf="@id/home"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" />
        <Constraint
            android:id="@id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />
        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/scroll_view" />
        <Constraint
            android:id="@+id/scroll_view"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/home"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/iv_detect"
            android:elevation="0dp"
            motion:layout_constraintWidth_percent="0.4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="0.7"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tv_info"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/home_no_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />
        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="start"
            motion:layout_constraintStart_toEndOf="@id/home"
            motion:layout_constraintTop_toTopOf="@id/home"
            motion:layout_constraintBottom_toBottomOf="@id/home"
            android:layout_marginEnd="12dp"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>
</MotionScene>
